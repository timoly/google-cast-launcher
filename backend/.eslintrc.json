{
    "env": {
        "es6": true,
        "node": true,
        "jest": true,
        "browser": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettierx/standardx", "plugin:prettierx/@typescript-eslint"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettierx"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "@typescript-eslint/indent": ["error", 2],
        "@typescript-eslint/no-unused-vars": [2, {"args": "all", "argsIgnorePattern": "^_"}],
        "semi": ["error", "never"],
        "@typescript-eslint/explicit-function-return-type": "off"
    }
}